.form {
    color: #7a7a7a;
    
    &__row {
        margin-top: 10px;
        position: relative;
        
        &:after {
            content: "";
            display: block;
            clear: both;
        }
        &:first-child,
        &:first-of-type {
            margin-top: 0;
        }
    }
    &__group {
        margin-top: 35px;
        
        &:first-child,
        &:first-of-type {
            margin-top: 0;
        }
    }
    
    &:after {
        clear: both;
        content: "";
        display: block;
    }
    
    &__required {
        color: #b60022;
    }
    
    &__comment {
        font-size: 12px;
        margin: 6px 0 0;
    }
}

.form-label {
    &__wrap {
        margin: 0;

        .form-label {
            margin-top: 5px;
            display: inline-block;
        }
    }
    
    &__comment {
        font-size: 12px;
    }
}

.form-control__wrap {
    margin: 0;
    
    .form-text {
      padding: 0;
    }
    
    .form__row:after {
        clear: none;
        display: none;
    }
}

.form-cell {
    float: left;
    margin: 0 0 0 20px;
    
    &:first-child,
    &::first-of-type {
        margin-left: 0;
    }
}

.form-control {
    border: 1px solid #e6e7e8;
    padding: 4px 10px;
    border-radius: 0;
    width: 100%;
    background: #FFFFFF;
    font-size: 14px;
    color: #000000;
    outline: none;
    
    &:focus,
    &.focus {
        border-color: #5199db;
        box-shadow: 0 0 0 1px #5199db;
    }
    
    &.error {
        border-color: #b60022;
        
        &:focus {
            border-color: #5199db;
            box-shadow: 0 0 0 1px #5199db;
        }
    }
    
    &__required {
        position: absolute;
        top: -3px;
        left: -11px;
        font-size: 11px;
        color: #b60022;
        font-weight: 600;
    }
    &__error {
        position: absolute;
        top: -3px;
        right: 100%;
        padding: 8px 20px;
        font-size: 12px;
        color: #05627f;
        background: #FFFFFF;
        white-space: nowrap;
        border: 1px solid #b60022;
        z-index: 2;
        margin-right: 20px;
        max-width: 500px;
        
        &__text {
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        &:before {
            content: "";
            display: block;
            width: 0; 
            height: 0; 
            border-top: 7px solid transparent;
            border-bottom: 7px solid transparent;

            border-left: 7px solid #b60022;
            top: 50%;
            margin-top: -7px;
            right: -7px;
            position: absolute;
        }
        &:after {
            content: "";
            display: block;
            width: 0; 
            height: 0; 
            border-top: 6px solid transparent;
            border-bottom: 6px solid transparent;

            border-left: 6px solid #FFFFFF;
            top: 50%;
            margin-top: -6px;
            right: -6px;
            position: absolute;
        }
    }
    
    &_lg {
        padding: 12px 18px;
        font-size: 18px;
        line-height: 1.3333333em;
        border-radius: 4px;
    }
    &_sm {
    }
    &_xs {
    }
}

select.form-control {
    padding: 4px 4px 4px 10px;
}
.form-control[disabled] {
    background: #f9f9f9;
    color: #c3c3c3;
}
.form-control[type=text],
select.form-control {
    min-width: 100px;
}

.form-control-password-wrap {
    position: relative;
  
    .form-control {
        width: 100%!important;
        padding-right: 25px;
    }
}

.form-control-password-btn {
    color: #9e9e9e;
    cursor: pointer;
    height: 17px;
    margin-top: -11px;
    position: absolute;
    right: 10px;
    top: 50%;
    vertical-align: top;
    width: 15px;
    
    &:before {
        content: "\e043";
        font-family: "konturIconic";
    }
    &.view:before {
        content: "\e044";
        font-family: "konturIconic";
    }
}

.form-checkbox,
.form-radio {
  margin: 0;
  position: relative;
  padding: 5px 0 5px 18px;
}
.form-input_checkbox,
.form-input_radio {
  left: 0;
  padding: 0;
  position: absolute;
  top: 9px;
}

.form_horizontal {
    .form-label__wrap {
        float: left;
        width: 185px;
    }
    .form-control__wrap {
        margin: 0 0 0 200px;
        
        .form-text {
            padding: 5px 0 0 0;
        }
    }
}

.form_inline {
    .form-label__wrap {
        margin: 0 10px 0 0;
        display: inline-block;
        vertical-align: top;
        float: none;
        width: auto;
    }
    .form-control__wrap {
        display: inline-block;
        vertical-align: top;
        margin: 0;
        
        .form-text {
            padding: 5px 0 0 0;
        }
    }
}

.form_vertical {
    .form-label__wrap {
        float: none;
        width: auto;
    }
    .form-control__wrap {
        margin: 5px 0 0;
        .form-text {
            padding: 0;
        }
    }
}

.form-input.form-input-error:focus {
  background: #fff0f0;
  border-color: #d92b2b;
  box-shadow: 0 0 0 1px #d92b2b;
}
.form-input-error-text {
  color: #da0902;
  font-size: 13px;
}
.form-input-comment,
.form-input-comment-error {
  font-size: 13px;
  line-height: 1.2;
  margin: 5px 0 0;
  color: #bcbcbc;
}
.form-input-comment-error {
  color: #d92b2b;
}