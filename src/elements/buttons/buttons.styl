.btn {
    display: inline-block;
    padding: 6px 12px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143em;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    touch-action: manipulation;
    cursor: pointer;
    user-select: none;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 4px;
    text-decoration: none;
    transition: background 0.15s, color 0.15s;
    
	&:hover,
    &.hover,
    &:focus {
        text-decoration: none;
    }

    &:active,
    &.active {
        box-shadow: inset 0 2px 0px 0px rgba(0,0,0,0.2);
    }

    &.disabled,
    &[disabled],
    fieldset[disabled] & {
        &,
        &:hover,
        &:focus,
        &:active {
            cursor: not-allowed;
            pointer-events: none;
            color: @btn-disable-color !important;
            background-color: @btn-disabled-bg;
            box-shadow: inset 0 0px 0px 1px #d7d7d7;
        }
    }
	
    &_primary {
        color: #fff;
        text-transform: uppercase;
        background-color: #ab0e07;
        border-color: #ab0e07;
        
        &:hover,
        &:focus,
        &:active {
            color: #fff;
            background-color: #790e09;
            border-color: #790e09;
            text-decoration: none;
        }
    }
    &_secondary {
        color: #fff;
        background-color: #5cb85c;
        border-color: #4cae4c;
        &:hover,
        &:focus,
        &:active {
            color: #fff;
            background-color: #449d44;
            border-color: #398439;
        }
    }
    
    &_lg {
        padding: 15px 25px;
        font-size: 14px;
        line-height: 1.3333333em;
        border-radius: 4px;
    }
    
    &_sm {
        padding: 5px 10px;
        font-size: 12px;
        line-height: 1.5em;
        border-radius: 2px;
    }
    
    &_xs {
        padding: 1px 5px;
        font-size: 12px;
        line-height: 1.5em;
        border-radius: 1px;
    }
}

