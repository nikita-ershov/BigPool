.footer {
    color: #FFFFFF;
    background: #0e5377;
    height: 275px;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    font-size: 13px;
    
    a {
        color: #FFFFFF;
    }
    
    &__top {
        padding: 38px 0 110px;
    }
    &__bottom {
        background: #083045;
        padding: 28px 0 0;
        height: 100px;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
    }
    
    &__logo {
        float: left;
    }
    
    &__info {
        float: left;
        margin: 0 50px;
        opacity: 0.7;
        line-height: 1.3em;
    }
    &__copy {
        float: right;
        opacity: 0.7;
        margin: 6px 0 0;
    }
    
    &__title {
        text-transform: uppercase;
        color: #ffdc2e;
        font-size: 15px;
    }
    
    &__menu {
        margin: 18px 0 0;
        
        a {
            text-decoration: none;
        }        
    }
      
    &__phone {
        text-align: center;
        font-size: 15px;
        line-height: 1.35em;
        padding-top: 45px;
        
        .icon-phone {
            position: absolute;
            left: 50%;
            top: 0;
            margin-left: -12px;
        }
    }
    &__addr {
        text-align: center;
        line-height: 1.2em;
        padding-top: 45px;
        
        .icon-map {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            text-align: center;
            color: #ffdc2e;
            font-size: 20px;
        }
    }
    &__mail {
        text-align: center;
        line-height: 1.2em;
        padding-top: 45px;
        
        .icon-mail {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            text-align: center;
            color: #ffdc2e;
            font-size: 18px;
        }
    }
}

@media (max-width: 700px) {
    .footer {
        height: auto;
        position: relative;
    }
}