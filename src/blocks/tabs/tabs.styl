.tabs {
    
    &__header {
    }
    
    &__list {
        font-size: 0;
    }
        
    &__item {
        height: 45px;
        line-height: 45px;
        font-size: 14px;
        text-align: center;
        background: #f0f0f0;
        font-weight: 600;
        display: inline-block;
        min-width: 126px;
        vertical-align: top;
        transition: background 0.15s, color 0.15s;
        
        &:hover {
            background: #0091b7;
            color: #FFFFFF;
            
            a {
                color: #FFFFFF;
            }
        }
        
        &.active {
            background: #0091b7;
            color: #FFFFFF;
            position: relative;
            
            a {
                color: #FFFFFF;
                cursor: default;
            }
            
            &:after {
                content: "";
                display: block;
                width: 0; 
                height: 0; 
                border-left: 7px solid transparent;
                border-right: 7px solid transparent;

                border-top: 7px solid #0091b7;
                
                position: absolute;
                left: 50%;
                bottom: -7px;
                margin-left: -7px;
            }
        }
        
        a {
            display: block;
            padding: 0 18px;
            text-decoration: none;
            color: #070707;
            height: 45px;
            line-height: 45px;
        }
    }
    
    &__content {
        padding: 40px 0;
        
        .tab-pane {
            display: none; 
        }
        >.active {
            display: block;
        }
    }
}