.header {
    padding: 10px 0;
    font-size: 12px;
    
    .container {
        position: relative;
    }
    
    &__top {
        padding: 20px 0 15px;
    }
    &__bottom {
        padding: 12px 0 11px;
        border-top: 1px solid #e6e7e8;
    }
    
    &__phone {
        float: left;
        font-size: 25px;
        text-align: right;
        line-height: 1.1em;
        position: relative;
    }
    &__worktime {
        position: absolute;
        left: 0;
        bottom: 0;
        font-size: 13px;
    }
    &__callback {
        display: inline-block;
        padding: 0 0 0 36px;
        color: #808285;
        width: 110px;
        .icon-phone {
            position: absolute;
            left: 0;
            top: 0;
        }
    }
    &__logo {
        text-align: center;
    }
    &__course {
        float: left;
        line-height: 24px;
    }
    &__login {
        float: left;
        margin-left: 40px;
        text-transform: uppercase;
        line-height: 24px;
    }
    &__basket {
        float: left;
        margin-left: 30px;
        text-transform: uppercase;
        line-height: 24px;
        
        .icon-basket {
        }
        
        &__num {
            font-size: 14px;
            font-weight: bold;
        }
    }
}