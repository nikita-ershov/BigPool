.header {
    font-size: 12px;
    
    .container {
        position: relative;
    }
    
    &__top {
        padding: 30px 0 18px;
    }
    &__bottom {
        padding: 12px 0 11px;
        border-top: 1px solid #e6e7e8;
    }
    &__right {
        float: right;
        margin: 18px 0 0;
    }
    
    &__phone {
        float: left;
        font-size: 25px;
        text-align: right;
        line-height: 1.1em;
        position: relative;
        margin-right: 25px;
    }
    &__worktime {
        position: absolute;
        left: 0;
        bottom: 0;
        font-size: 13px;
        line-height: 1.8em;
    }
    &__callback {
        display: inline-block;
        padding: 0 0 0 36px;
        color: #808285;
        
        .icon-phone {
            position: absolute;
            left: 0;
            top: 0;
        }
    }
    &__logo {
        text-align: center;
    }
    &__course {
        float: left;
        line-height: 24px;
        color: #7f7f7f;
    }
    &__login {
        float: left;
        margin-left: 40px;
        text-transform: uppercase;
        line-height: 24px;
        a {
            color: #262626;
            text-decoration: none;
        }
    }
    &__basket {
        float: left;
        margin-left: 30px;
        text-transform: uppercase;
        line-height: 24px;
        
        a {
            color: #262626;
            text-decoration: none;
        }
        
        .icon-basket {
        }
        
        &__num {
            font-size: 14px;
            font-weight: bold;
        }
    }
}