.side-menu {
    line-height: 1em;
    
    &__item {
        border-top: 1px solid #e2e2e2;        
       
        .side-menu__header.collapsed {
            &>a {
                color: #ab0e07;
                color: #7a7a7a;
                background: #FFFFFF;
            }

            &:before {
                content: '\e803';
            }
        }
    }
    
    &__header {
        position: relative;
        cursor: pointer;
        
        &:before {
            content: '\e802';
            font-family: "icons";
            font-style: normal;
            font-weight: normal;
            speak: none;
            display: block;
            text-decoration: inherit;
            width: 1em;
            text-align: center;
            font-variant: normal;
            text-transform: none;
            line-height: 1em;
            position: absolute;
            left: 9px;
            top: 9px;
            color: #ab0e07;
        }
        
        >a {
            color: #ab0e07;
            background: #ededed;
            display: block;
            padding: 8px 10px 12px 28px;
            
            &:hover {
                color: #ab0e07;
                background: #ededed;
                text-decoration: underline;
            }
        }
    }
    
    &__submenu {
        background: #f5f5f5;
        font-size: 14px;
        padding: 5px 0;
        
        &__item {
            padding: 3px 10px 3px 48px;
            
            >a {
                display: inline;
                color: #7a7a7a;
                text-decoration: none;
                padding: 0;
                background: none;
                
                &:hover {
                    color: #ab0e07;
                    background: none;
                    text-decoration: underline;
                }
            }
        }
    }
}