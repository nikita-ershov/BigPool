.text {
    color: #7a7a7a;
    
    h2,
    .h2 {
        margin-bottom: 15px;
        
    }
    
    h3,
    .h3 {
        margin-bottom: 25px;
        color: #5e5e5e;
    }
    
    h4,
    .h4 {
        margin-bottom: 10px;
        font-size: 16px;
        line-height: 1.15em;
        color: #5e5e5e;
        font-weight: 600;
        text-transform: uppercase;
    }
    
    h5,
    .h5 {
        margin-bottom: 20px;
    }
    
    p.lead {
        font-size: 16px;
        line-height: 1.9em;
    }
    
    p {
        font-size: 16px;
        line-height: 1.35em;
        margin-bottom: 30px;
    }
    
    a {
        color: #0084ff;
    }
    
    ul {
        margin-bottom: 30px;
        
        li {
            padding-left: 20px;
            position: relative;
            
            &:before {
                content: "\2022";
                position: absolute;
                font-size: 20px;
                color: #ab0e07;
                left: 0;
                top: -1px;
            }
        }
    }
    
    ol {
        margin-bottom: 30px;
        margin-left: 20px;
        
        li {
            list-style: decimal;
        }
    }
    img {
        border-radius: 8px;
        overflow: hidden;
        
        &.pull-left {
            margin: 0 20px 20px 0;
        }
    }
    
    a.btn {
        color: #FFFFFF;
    }
}