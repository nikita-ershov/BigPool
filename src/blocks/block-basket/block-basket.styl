.block-basket {
    &.section {
        margin: 40px 0;
    }
    
    &__table {
        width: 100%;
        margin: 30px 0;
        
        th {
            color: #969190;
            font-size: 12px;
            font-weight: 600;
            padding: 15px 30px;
            border-top: 1px solid #eaeaea;
            
            &:first-child {
                border-left: 1px solid #eaeaea;
            }
            &:last-child {
                border-right: 1px solid #eaeaea;
            }
        }
        td {
            padding: 10px 30px;
            font-size: 12px;
            border-top: 1px solid #eaeaea;
            
            &:first-child {
                border-left: 1px solid #eaeaea;
            }
            &:last-child {
                border-right: 1px solid #eaeaea;
            }
        }
        
        select.form-control {
            min-width: 70px;
            width: 70px;
        }
    }
    
    &__price {
        font-size: 21px;
        font-weight: 700;
    }
    
    &__total {
        .block-basket__price {
            font-size: 28px;
        }
        
        td {
            border-top: 1px solid #0091b7;
            border-bottom: 1px solid #0091b7;
            background: #f4f4f4;
            padding: 5px 30px;
            font-size: 14px;
            
            &:first-child {
                border-left: 1px solid #0091b7;
            }
            &:last-child {
                border-right: 1px solid #0091b7;
            }
        }
    }
    
    .icon-trash {
        font-size: 20px;
        cursor: pointer;
    }
}