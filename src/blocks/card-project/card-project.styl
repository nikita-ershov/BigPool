.card-project {
    margin: 0 0 20px;
    height: 231px;
        
    .col-xs-8 & {
        height: 496px;
    }
        
    &__image {
        margin-bottom: 12px;
        height: 180px;
        overflow: hidden;
        
        img {
            height: 100%;
            max-width: 1000%;
        }
    }
    
    &__title {
        font-size: 14px;
        text-transform: uppercase;
        margin: 0;
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        
        a {
            text-decoration: none;
        }
    }
    
    &__desc {
        color: #676767;
        font-size: 13px;
        font-weight: 600;
    }
    
    &__gallery {
        position: relative;
        overflow: hidden;
        
        .card-project__image {
            height: 445px;
        }

        &__nav {
            position: absolute;
            right: 30px;
            bottom: 30px;
            z-index: 3;

            &__item {
                display: inline-block;
                width: 8px;
                height: 8px;
                border-radius: 4px;
                background: #bebfc4;
                overflow: hidden;
                margin: 0 3px;
                cursor: pointer;

                &.active {
                    background: #FFFFFF;
                }
            }
        }
    }
}