.breadcrumbs {
    color: #7a7a7a;
    font-size: 15px;
    margin: 14px 0;
    font-weight: 600;
    
    &__item {
        display: inline-block;
        
        a {
            color: #0091b7;
            text-decoration: none;
            
            &:hover,
            &:active {
                color: #0091b7;
            }
        }
        
        &:before {
            content: "\2192";
            margin: 0 10px;
        }
        
        &:first-child {
            &:before {
                display: none;
            }
        }
    }
}