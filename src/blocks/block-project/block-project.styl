.block-project {
    &__info {
        font-size: 13px;
        margin: 0 0 20px;
    }
    &__title {
        font-weight: 600;
    }
    &__desc {
        font-size: 13px;
        color: #676767;
        padding: 0 0 10px;
        position: relative;
        
        &:after {
            content: "";
            display: block;
            height: 1px;
            width: 87px;
            background: #0091b7;
            position: absolute;
            left: 0;
            bottom: 0;
        }
    }
    &__year {        
        font-size: 13px;
        color: #676767;
        padding: 10px 0 0;
    }
    &__gallery {
        margin-top: 20px;
        margin-bottom: 20px;
    }
    &__image {
        &__img {
            overflow: hidden;
            
            img {
                width: 100%;
            }
        }
        &__title {
            color: #676767;
            font-size: 13px;
            margin: 10px 0 0;
        }
    }
    
    &__thumbs {
        text-align: right;
        
        &__item {
            margin-bottom: 26px;
            border: 7px solid #FFFFFF;
            width: 132px;
            height: 81px;
            overflow: hidden;
            outline: 1px solid #d5d6d8;
            cursor: pointer;
            
            &.active {
                outline: 1px solid #0091b7;
                cursor: default;
            }
            
        }
    }
}